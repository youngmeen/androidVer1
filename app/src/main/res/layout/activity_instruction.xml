<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Instruction">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <steelkiwi.com.library.view.IndicatorView
        android:id="@+id/indicatorView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iv_bar_color="@android:color/black"
        app:iv_idle_color="#999999"
        app:iv_select_color="#666666"
        app:iv_size="40dp"
        app:iv_text_color="@android:color/white"
        app:iv_text_size="12sp"
        app:iv_action="hung_down"
        app:iv_item_amount="3"
        />
    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finish"
        android:onClick="finish"

        />


</RelativeLayout>